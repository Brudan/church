= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .field
    = f.label :location
    %br/
    = f.text_field :location
  = f.label :starttime
  %br/
  = f.datetime_select :start_time
  = f.label :endtime
  %br/
  = f.datetime_select :end_time
  /
    <div class="field">
    
    </haml:block><haml:silent></haml:silent><haml:block><br />
    <haml:silent>
    </haml:silent>  </div>
  .actions
    = f.submit
