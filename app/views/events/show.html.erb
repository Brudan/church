<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @event.name %>
</p>

<p>
  <b>Description:</b>
  <%= @event.description %>
</p>

<p>
  <b>Location:</b>
  <%= @event.location %>
</p>

<p>
  <b>Start:</b>
  <%= @event.start_time %>
</p>

<p>
  <b>End:</b>
  <%= @event.end_time %>
</p>

<p>
  <b>Church:</b>
  <%#= @event.user_id %>
  <%= link_to @event.user.church, @event.user %>
</p>

<%# if signed_in? %>
<% if current_user == @event.user %>
<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Delete', method: :delete, data: { confirm: 'Are you sure?' }  %> |
<% end %>
<%= link_to 'Back', events_path %>
