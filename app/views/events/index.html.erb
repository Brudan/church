<% provide(:title, "Church Events around you") %> 

<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Location</th>
    <th>Start</th>
    <th>End</th>
    <th>Church</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.description %></td>
    <td><%= event.location %></td>
    <td><%= event.start_time %></td>
    <td><%= event.end_time %></td>
    <td><%= link_to event.user.church, event.user %></td>
    <td><%#= event.user_id %></td>
    <td><%= link_to 'Event Details', event %></td>
    <td><%= link_to "Attending", '#' %></td>


    <%# if signed_in? %>
   <%# if current_user == @event.user %>
    
    
    <td><%#= link_to 'Edit', edit_event_path(event) %></td>
    
    <td><%#= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <%# else %>
    <td><%#= link_to 'Edit', edit_event_path(event) %></td>
    <%# end %>
    <%# end %>
  </tr>
<% end %>
</table>

<br />

