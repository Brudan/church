<% @users.each do |user| %>
  <tr>
    <td><%# user.username %></td>
    <td><%= user.church %></td>
    <td><%= user.email %></td>
    <td><%= user.location %></td>
    <td><%= user.religion %></td>
    <td><%= link_to 'Details', user %></td>
    <td><%#= link_to 'Edit', edit_user_path(user) %></td>
    <td><%#= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

